    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js --progress --display-error-details --colors",
    "clean": "rm -rf ./dist/coalk.*",
    "test": "mocha --recursive --require @babel/register"
  },
  "keywords": [
    "fyj",
    "comment",
    "comment-plugin",
    "website-tool"
  ],
  "author": {
